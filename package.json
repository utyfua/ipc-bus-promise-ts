{
  "name": "ipc-bus-promise",
  "version": "0.0.2",
  "description": "IPC Bus Promise is a lightweight library for message-based inter-process communication with Promise support. It is designed to work across multiple environments, including React Native WebView and Node.js child processes.",
  "keywords": [
    "ipc",
    "inter-process communication",
    "promise",
    "react-native",
    "react-native-webview",
    "node",
    "child-process"
  ],
  "typings": "dist/index.d.ts",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "prepack": "npm run build",
    "prebuild": "run-s clean",
    "build": "run-s build:tsc build:rollup",
    "build:tsc": "tsc --module commonjs",
    "build:rollup": "rollup -c rollup.config.ts",
    "test": "run-s build test:jest",
    "test:jest": "jest -c jest.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utyfua/ipc-bus-promise-ts.git"
  },
  "author": "Utyfua",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/utyfua/ipc-bus-promise-ts/issues"
  },
  "homepage": "https://github.com/utyfua/ipc-bus-promise-ts#readme",
  "peerDependencies": {
    "events": "^3.3.0"
  },
  "peerDependenciesMeta": {
    "events": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "copyfiles": "^2.4.1",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "overrides": {
    "tslib": "2.6.2"
  }
}
